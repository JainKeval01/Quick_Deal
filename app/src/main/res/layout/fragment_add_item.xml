<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".fragment.AddItemFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUICK DEAL"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:letterSpacing="0.1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell an Item"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:textSize="14sp"
                android:textColor="#5C6FFF"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Indicator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#5C6FFF" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Photos Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Photos"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tvPhotoCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textSize="13sp"
                            android:textColor="#999999" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add up to 10 photos. Clear details help you sell faster."
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAddMainPhoto"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#F5F8FF"
                                android:layout_marginEnd="12dp"
                                android:clickable="true"
                                android:focusable="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:background="@drawable/bg_dashed_border">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_camera"
                                        app:tint="#5C6FFF" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Add Photo"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="#5C6FFF"
                                        android:layout_marginTop="8dp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <!-- Photo 1 Placeholder -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#F0F0F0"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_image"
                                    app:tint="#CCCCCC" />

                            </androidx.cardview.widget.CardView>

                            <!-- Photo 2 Placeholder -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#F0F0F0"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_image"
                                    app:tint="#CCCCCC" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Item Details Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TITLE"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/etTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. iPhone 14 Pro Max - 256GB"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:textColorHint="#CCCCCC"
                        android:background="@drawable/bg_input_field"
                        android:padding="14dp"
                        android:layout_marginBottom="16dp"
                        android:inputType="text"
                        android:maxLines="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CATEGORY"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_spinner"
                        android:padding="14dp"
                        android:layout_marginBottom="16dp"
                        android:spinnerMode="dropdown" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONDITION"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipNew"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="New"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"
                            app:chipStrokeColor="#E0E0E0"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUsedLikeNew"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Used - Like New"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"
                            app:chipStrokeColor="#E0E0E0"
                            app:chipStrokeWidth="1dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipUsedGood"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Used - Good"
                            android:textColor="@color/chip_text_color"
                            app:chipBackgroundColor="@color/chip_background_color"
                            app:chipStrokeColor="#E0E0E0"
                            app:chipStrokeWidth="1dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCRIPTION"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Describe your item..."
                        android:minHeight="120dp"
                        android:textColor="#000000"
                        android:gravity="top"
                        android:background="@drawable/bg_input_field"
                        android:padding="14dp"
                        android:inputType="textMultiLine"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvDescriptionCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/2000"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:gravity="end"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pricing & Location Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRICE"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp"/>

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="e.g. 50000"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:background="@drawable/bg_input_field"
                        android:padding="14dp"
                        android:layout_marginBottom="16dp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNegotiable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:text="Price is Negotiable"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LOCATION"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:id="@+id/llLocationSelector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_input_field"
                        android:padding="14dp"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location"
                            app:tint="#5C6FFF"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Location"
                            android:textSize="15sp"
                            android:textColor="#000000"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Post Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPostNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Now"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#5C6FFF"
                app:cornerRadius="12dp"
                android:padding="16dp"
                android:layout_margin="16dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>